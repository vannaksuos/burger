
    <h2 class="center">Eat The Burger!</h2>
    <img src=".\assets\img\burger.png" id="burgerPic">

<div class="ulLeft"
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
    </ul>
    </div>

<div class="ulRight"

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
    </ul>

</div>
    <h2 class="center">Add a burger you want to eat</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">burger Name:</label>
            <input type="text" id="burger" name="name" class="burgerInput" />
        </div>

        <button type="button" id="addBurger" class="center">Add burger</button>
    </form>
</div>