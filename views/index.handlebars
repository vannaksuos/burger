<h2>Eat The Burger!</h2>
<img src="burger\public\assets\img\burger.png">
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
</ul>


<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devour">devour?</label><br>
        <input type="radio" name="devour" value="1" checked> devour!<br>
        <input type="radio" name="devour" value="0"> Eat up
    </div>

    <button type="submit">Add burger</button>
</form>